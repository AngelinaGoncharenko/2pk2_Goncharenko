<Window x:Class="pz_29.OpenWindowItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pz_29"
        mc:Ignorable="d"
        Title="AddItemWindow" Height="150" Width="370">
    <StackPanel HorizontalAlignment="Center">
        <Label Content="Укажите сумму для создания счета" HorizontalAlignment="Center"/>
        <TextBox x:Name="nameTB" MinWidth="300" TextChanged="nameTB_TextChanged"/>

        <Label Content="Выберите тип счета" HorizontalAlignment="Center"/>
        <Button x:Name="DemandItem" Content="До востребования" Click="DemandItem_Click"/>
        <Button x:Name="DepositItem" Content="Депозит" Click="DepositItem_Click"/>

    </StackPanel>
</Window>
